{
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "dist",
      "module": "commonjs",
      "target": "esnext",
      "lib": ["es6", "dom", "es2017"],
      "sourceMap": true,
      "allowJs": true,
      "moduleResolution": "node",
      "rootDir": "src",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": false
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts",
      "Gruntfile.js",
      "client-src",
      "locales",
      "mustache",
      "public",
      "scripts",
      "test"
    ]
  }